<div class="row ">
  <div class="col s12">
    <h2>Movies Page</h2>
    <a class="btn waves-effect waves-light" href="/">Home page
      <i class="material-icons left">arrow_back</i>
    </a>
    <a class="btn waves-effect waves-light" href="/movies/create/new">Add new movie
      <i class="material-icons right">add_circle_outline</i>
    </a>
  </div>
</div>
<div class="row">
  {{#each ofTheMovies}}
  <div class="col s10 m5 l3">
    <div class="card sticky-action">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="/images/cinema.jpg">
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">{{this.title}}<i
            class="material-icons right">more_vert</i></span>
        <p><a href="/movies/{{this._id}}">More info</a></p>
      </div>
      <div class="card-action">
        <div class="flex">
          <form action="/movies/{{this._id}}/edit" method="GET">
            <button class="edit btn waves-effect waves-light ">Edit
              <i class="material-icons left">edit</i>
            </button>
          </form>
          <form action="/movies/{{this._id}}/delete" method="POST">
            <button class="delete btn waves-effect waves-light ">Delete
              <i class="material-icons right">delete_forever</i>
            </button>
          </form>
        </div>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
        <p>Here is some more information about this product that is only revealed once clicked on.</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>