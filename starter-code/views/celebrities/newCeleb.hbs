<h2>Add new celebrity to Database</h2>
<div class="row">

<form action="/celebrities" method="POST" class="col s6" enctype="multipart/form-data">
  <label for="name">Name: </label>
  <input type="text" name="name">

  <label for="occupation">Occupation: </label>
  <input type="text" name="occupation">

  <label for="catchPhrase">Catch Phrase: </label>
  <input type="text" name="catchPhrase">

  <input type="file" name="image">

  <div class="input-field">
    <select name="movies" id="moviesSelect">
      <option value="" disabled selected>Choose your option</option>
      {{#each movies}}
      <option value="{{this._id}}">{{this.title}}</option>
      {{/each}}
    </select>
    <label for="moviesSelect">Movie Selection: </label>
  </div>

  <div class="row">
    <div class="col s3">
      <a class="btn waves-effect waves-light" href="/celebrities/index">Back
        <i class="material-icons left">arrow_back</i>
      </a>

    </div>
    <div class="col s3 push-s1">

      <button class="btn waves-effect waves-light" >Save
        <i class="material-icons right">send</i>
      </button>
    </div>
  </div>


</form>
</div>